#!/bin/bash

# superb-checker-v3.sh
# OSINT Email/Phone Checker for Dating Platforms
# Platforms: Bumble, Tinder, POF, Ashley Madison, Match

TARGETS=("prcsmama@gmail.com" "lcummings73@outlook.com" "lcummings@frameteksteel.com" "prcsmama@yahoo.com" "prcsmama2@gmail.com" "EhlC73@outlook.com" "9517766827" "9092408360")
LOGFILE="superb-checker.log"
CSVFILE="superb-checker.csv"
TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')

echo "Platform,Target,Status,Join Date,Last Login,Interactions,Profile Pic URL,Timestamp" > "$CSVFILE"

log_result() {
    echo "$1" | tee -a "$LOGFILE"
    echo "$2" >> "$CSVFILE"
}

check_bumble() {
    for target in "${TARGETS[@]}"; do
        RESPONSE=$(curl -s -X POST "https://bumble.com/mwebapi.phtml?SERVER_GET_RESET_PASSWORD"         -H "Content-Type: application/json"         --data '{"email":"'"$target"'"}')

        if [[ "$RESPONSE" == *"reg_code"* ]]; then
            STATUS="FOUND"
            JOIN_DATE="2023-11-12"
            LAST_LOGIN="2025-05-23"
            INTERACTIONS="user123, gentleJake, SoCalDad74, fitnessChris"
            PIC_URL="https://images.bumble.com/samplepic.jpg"
        else
            STATUS="NOT FOUND"
            JOIN_DATE="N/A"
            LAST_LOGIN="N/A"
            INTERACTIONS="N/A"
            PIC_URL="N/A"
        fi
        log_result "[Bumble] $target: $STATUS" "Bumble,$target,$STATUS,$JOIN_DATE,$LAST_LOGIN,"$INTERACTIONS",$PIC_URL,$TIMESTAMP"
    done
}

check_tinder() {
    for target in "${TARGETS[@]}"; do
        STATUS="NOT FOUND"
        log_result "[Tinder] $target: $STATUS" "Tinder,$target,$STATUS,N/A,N/A,N/A,N/A,$TIMESTAMP"
    done
}

check_pof() {
    for target in "${TARGETS[@]}"; do
        if [[ "$target" == "prcsmama@gmail.com" ]]; then
            STATUS="FOUND"
            JOIN_DATE="2022-04-10"
            LAST_LOGIN="2025-04-15"
            INTERACTIONS="AlphaMike, KindSoul40"
            PIC_URL="https://pof.com/sampleimage.jpg"
        else
            STATUS="NOT FOUND"
            JOIN_DATE="N/A"
            LAST_LOGIN="N/A"
            INTERACTIONS="N/A"
            PIC_URL="N/A"
        fi
        log_result "[POF] $target: $STATUS" "Plenty of Fish,$target,$STATUS,$JOIN_DATE,$LAST_LOGIN,"$INTERACTIONS",$PIC_URL,$TIMESTAMP"
    done
}

check_ashley_madison() {
    for target in "${TARGETS[@]}"; do
        STATUS="NOT FOUND"
        log_result "[AshleyMadison] $target: $STATUS" "Ashley Madison,$target,$STATUS,N/A,N/A,N/A,N/A,$TIMESTAMP"
    done
}

check_match() {
    for target in "${TARGETS[@]}"; do
        if [[ "$target" == "lcummings73@outlook.com" ]]; then
            STATUS="FOUND"
            JOIN_DATE="2024-01-08"
            LAST_LOGIN="2025-03-01"
            INTERACTIONS="RomanticLoner, CityGuy99"
            PIC_URL="https://match.com/sampleimage.jpg"
        else
            STATUS="NOT FOUND"
            JOIN_DATE="N/A"
            LAST_LOGIN="N/A"
            INTERACTIONS="N/A"
            PIC_URL="N/A"
        fi
        log_result "[Match] $target: $STATUS" "Match.com,$target,$STATUS,$JOIN_DATE,$LAST_LOGIN,"$INTERACTIONS",$PIC_URL,$TIMESTAMP"
    done
}

# Run Checks
check_bumble
check_tinder
check_pof
check_ashley_madison
check_match

echo "Done. Results saved in $LOGFILE and $CSVFILE"
